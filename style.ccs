body {
  font-family: sans-serif;
  background: radial-gradient(#1e1e2f, #0f0f1f);
  color: white;
  text-align: center;
  padding: 20px;
}

#wheel-container {
  margin: 20px auto;
}

#spin-btn {
  padding: 10px 20px;
  font-size: 18px;
  margin-top: 20px;
  cursor: pointer;
  border-radius: 12px;
  border: none;
  background: linear-gradient(45deg, #5ac8fa, #007aff);
  color: white;
}
